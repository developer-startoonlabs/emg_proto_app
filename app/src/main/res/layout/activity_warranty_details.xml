<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.start.apps.pheezee.activities.WarrantyDetails">

    <LinearLayout
        android:id="@+id/ktr_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="350dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:src="@drawable/green_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pitch_black"
            android:id="@+id/ktr_b"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:text="Warranty Certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pitch_black"
            android:id="@+id/notification_box_title"
            android:textSize="35sp"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="300dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dwt_1"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:src="@drawable/warranty_k"
            android:textColor="@color/pitch_black" />
        <ImageView
            android:src="@drawable/share_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/pitch_black"
            android:id="@+id/dwt_2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/madel_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="350dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="115dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:src="@drawable/medal_1"
            android:textAlignment="center"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:src="@drawable/warranty_bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="160dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="313dp">
    <TextView
        android:id="@+id/text_data"
        android:layout_width="64dp"
        android:layout_height="12dp"
        android:textAlignment="center"
        android:textSize="8sp"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="209dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="390dp">
        <TextView
            android:id="@+id/text_data1"
            android:layout_width="64dp"
            android:layout_height="12dp"
            android:text="@string/demo_name"
            android:textAlignment="center"
            android:textSize="8sp"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="130dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="390dp">
        <TextView
            android:id="@+id/text_data2"
            android:layout_width="64dp"
            android:layout_height="12dp"
            android:text="@string/demo_name"
            android:textAlignment="center"
            android:textSize="8sp"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


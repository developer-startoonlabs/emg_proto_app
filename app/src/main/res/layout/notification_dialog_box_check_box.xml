<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/popup_window">

    <LinearLayout
        android:id="@+id/notification_title_layout"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:text="Notification title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/notification_box_title"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/toolbar"
            android:layout_alignParentTop="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/kranthi_one"
        app:layout_constraintTop_toBottomOf="@+id/notification_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_01"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/Heading"
            android:paddingLeft="8dp"
            android:text="DM"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/kranthi_two"
        app:layout_constraintTop_toBottomOf="@+id/kranthi_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/Heading"
            android:id="@+id/check_02"
            android:paddingLeft="8dp"
            android:text="Hypertension"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/kranthi_three"
        app:layout_constraintTop_toBottomOf="@+id/kranthi_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/Heading"
            android:id="@+id/check_03"
            android:paddingLeft="8dp"
            android:text="Hypothyroidism"/>


    </LinearLayout>

    <!--    <LinearLayout-->
    <!--        android:id="@+id/kranthi_four"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/kranthi_three"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:gravity="center_horizontal"-->

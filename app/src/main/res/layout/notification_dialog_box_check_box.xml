    <!--        <CheckBox-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginLeft="16dp"-->
    <!--            android:layout_marginRight="16dp"-->
    <!--            android:textColor="@color/pitch_black"-->

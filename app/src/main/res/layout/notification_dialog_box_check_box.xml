    <!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/kranthi_five"
        app:layout_constraintTop_toBottomOf="@+id/kranthi_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/Heading"
            android:id="@+id/check_04"
            android:paddingLeft="8dp"
            android:text="Presence of implant"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/kranthi_six"
        app:layout_constraintTop_toBottomOf="@+id/kranthi_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            style="@style/pheezee_bold"
            android:fontFamily="@font/pheezee_font"
            android:textSize="@dimen/Heading"
            android:id="@+id/check_05"
            android:paddingLeft="8dp"
            android:text="Others"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/notification_ButtonCancel"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            android:background="@drawable/round_cancel_buttons"
            android:paddingRight="5dp"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_alignStart="@+id/image"
            android:textSize="@dimen/btn_text"

            style="@style/pheezee_normal"
            android:fontFamily="@font/pheezee_font"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/notification_ButtonOK"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Done"
            android:textColor="@color/white"
            android:background="@drawable/round_same_buttons"
            android:paddingRight="5dp"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_alignStart="@+id/image"
            android:textSize="@dimen/btn_text"

            style="@style/pheezee_normal"
            android:fontFamily="@font/pheezee_font"

            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/popup_window_view"
    app:layout_constraintCircleRadius="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_bodypart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:elevation="@dimen/toolbar_dim_5"
        app:elevation="@dimen/toolbar_dim_5"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_app_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:src="@drawable/green_back_arrow" />

            <TextView
                android:id="@+id/tv_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ebrima"
                android:text="Add patient"
                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/edit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center"
                android:layout_marginRight="18dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_icon" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/Kranthi_1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/popup_window"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/my_toolbar_bodypart"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <LinearLayout android:orientation="vertical"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <TextView
                                android:gravity="left|center"
                                android:id="@+id/patientName"
                                android:paddingLeft="12sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/ebrima"
                                android:hint="-"
                                android:textColorHint="@color/pitch_black"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent">
                            <TextView
                                android:gravity="center|left"
                                android:paddingLeft="12sp"
                                android:id="@+id/tv_patient_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="-"
                                android:textColor="@color/pitch_black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_height="fill_parent"
                    android:gravity="center|right"
                    android:layout_width="0dp">

                    <LinearLayout
                        android:id="@+id/patient_image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/my_toolbar_bodypart">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/round_view" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/test_patient_add_1"
                            android:visibility="gone"
                            app:civ_border_width="0.1dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/test_patient_add_1" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/testing_kranthi"
                android:layout_width="match_parent"
                android:background="@drawable/w_b_b"
                android:layout_height="180dp"
                android:orientation="vertical">



            <LinearLayout
                android:id="@+id/bar_cal"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:layout_constraintTop_toBottomOf="@+id/Kranthi_1"
                android:background="@drawable/img12_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                tools:ignore="MissingConstraints"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent">

                    <LinearLayout
                        android:layout_weight="3.8"
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/ebrima"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="Goal reached"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent">

                        <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                            android:id="@+id/semi_prog"
                            android:layout_width="214dp"
                            android:layout_height="114dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:percent="50"
                            app:progressBarColor="#FCB000"
                            app:progressBarWidth="55"
                            app:progressPlaceHolderColor="#EFEFEF"
                            app:progressPlaceHolderWidth="42">
                        </me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar>


                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_goal_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/testing"
                    android:background="@drawable/popup_window"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">
                            <TextView
                                android:id="@+id/tv_phno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone no."
                                android:textColor="#AEACAC"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <TextView
                                android:id="@+id/patientphone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/img7"
                                android:text="-"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:drawablePadding="6dp"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">
                            <TextView
                                android:gravity="center|left"
                                android:id="@+id/tv_mail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Mail ID"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="#AEACAC"
                                tools:ignore="MissingConstraints" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <TextView
                                android:id="@+id/patientemail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/img2"
                                android:text="-"
                                android:textSize="10sp"
                                android:drawablePadding="6dp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">
                            <TextView
                                android:gravity="center|left"
                                android:id="@+id/tv_affected"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Affected side"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="#AEACAC" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <ImageView
                                android:id="@+id/effected_side"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/left_side_injured"/>

                            <TextView
                                android:gravity="center|left"
                                android:id="@+id/tv_affected_side"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:padding="6dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">
                            <TextView
                                android:id="@+id/tv_condition"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Condition"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="#AEACAC" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <TextView
                                android:id="@+id/tv_condition_det"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/img6"
                                android:text="-"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:textSize="10sp"
                                android:drawablePadding="6dp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">
                            <TextView
                                android:id="@+id/tv_Speciality"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Speciality"
                                android:fontFamily="@font/ebrima"
                                android:textColor="#AEACAC"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <TextView
                                android:id="@+id/tv_Speciality_det"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/img3"
                                android:text="-"
                                android:textSize="10sp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:drawablePadding="4dp"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>









                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_pdetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        >
                        <View
                            android:id="@+id/view_line"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="1dp"
                            android:background="#8E8888"
                            android:layout_marginTop="20dp"
                            tools:ignore="MissingConstraints" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/view_line_l"
                            android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            app:layout_constraintTop_toBottomOf="@id/view_line">

                            <LinearLayout
                                android:paddingLeft="16dp"
                                android:layout_weight="0.6"
                                android:layout_height="fill_parent"
                                android:layout_width="0dp">
                                <TextView
                                    android:gravity="center|left"
                                    android:id="@+id/tv_Medicalhistory"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawablePadding="6dp"
                                    android:text="Medical history"
                                    android:drawableStart="@drawable/img4"
                                    android:textColor="#002647"
                                    android:textSize="10sp"
                                    tools:ignore="MissingConstraints" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:layout_width="0dp">
                                <TextView
                                    android:id="@+id/tv_Medicalhistory_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="-"
                                    android:textSize="10sp"
                                    android:textColor="#002647"
                                    tools:ignore="MissingConstraints" />

                            </LinearLayout>

                        </LinearLayout>




                        <View
                            android:id="@+id/view_line_2"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#8E8888"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/view_line_l"
                            tools:ignore="MissingConstraints" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:id="@+id/kranthi_burra"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="250dp"
                        app:layout_constraintTop_toBottomOf="@id/testing"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_start_date"

                            >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="fill_parent"
                                android:layout_width="fill_parent">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingTop="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Start date"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingBottom="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:id="@+id/join"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/bg_start_date">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="fill_parent"
                                android:layout_width="fill_parent">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingTop="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Last Session"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingBottom="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:id="@+id/last_session"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/bg_start_date"
                            >
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="fill_parent"
                                android:layout_width="fill_parent">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingTop="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Sessions"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingBottom="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:id="@+id/session_count_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent"
                            android:background="@drawable/bg_start_date">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="fill_parent"
                                android:layout_width="fill_parent">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingTop="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Reports"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:paddingStart="5dp"
                                    android:paddingBottom="3dp"
                                    android:layout_height="fill_parent"
                                    android:layout_width="match_parent">
                                    <TextView
                                        android:id="@+id/report_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="10sp"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>










    </ScrollView>



    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/round_cancel_buttons"
            android:text="View reports"
            android:textAllCaps="false"
            android:textColor="@color/pheezee_text_blue_for_icon_text_background"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/round_same_buttons"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/delete_botton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@drawable/round_same_buttons"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>






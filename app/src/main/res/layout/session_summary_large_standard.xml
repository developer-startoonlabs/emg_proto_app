<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:fontFamily="@font/ebrima">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/summaryView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/summary_go_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/green_back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/summary_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_share_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ebrima"
                    android:paddingTop="5dp"
                    android:text="Session Summary"
                    android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/summary_go_back"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/patientDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/rangeOfMotionData"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/summary_go_back">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="left">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="Name : "
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_summary_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="sai"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="Date : "
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/session_held_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="03-jan-19"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="left">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="Id : "
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_summary_patient_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:text="sai"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rangeOfMotionData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_layout"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/maximumEmgView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/patientDetails"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ebrima"
                            android:text="RANGE OF MOTION"
                            android:textColor="@color/pitch_black"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/tv_orientation_and_bodypart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/ebrima"
                            android:textColor="@color/pitch_black"
                            android:textSize="23sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="18dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:padding="8dp"
                                android:text="@string/min_angle"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_min_angle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:paddingLeft="5dp"
                                android:paddingTop="1dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="1dp"
                                android:text="20°"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:padding="8dp"
                                android:text="@string/max_angle"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_max_angle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:paddingLeft="5dp"
                                android:paddingTop="1dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="1dp"
                                android:text="165°"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:padding="8dp"
                                android:text="@string/range_angle"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_range_min_max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ebrima"
                                android:paddingLeft="5dp"
                                android:paddingTop="1dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="1dp"
                                android:text="20°"
                                android:textColor="@color/pitch_black"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_min_max_arc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <com.start.apps.pheezee.views.ArcViewInside
                                    android:id="@+id/session_summary_arcview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ebrima"
                                        android:paddingLeft="5dp"
                                        android:paddingTop="1dp"
                                        android:paddingRight="5dp"
                                        android:paddingBottom="1dp"
                                        android:text="180°"
                                        android:textColor="@color/pitch_black"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="0.5"
                                    android:gravity="right"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp">

                                    <TextView
                                        android:id="@+id/tv_180"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ebrima"
                                        android:gravity="right"
                                        android:paddingLeft="5dp"
                                        android:paddingTop="1dp"
                                        android:paddingRight="17dp"
                                        android:paddingBottom="1dp"
                                        android:text="0°"
                                        android:textColor="@color/pitch_black"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0.5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:padding="8dp"
                                            android:text="Total Time"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="right">

                                        <TextView
                                            android:id="@+id/tv_total_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:background="@drawable/round_corners_textboxes_time"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="00 : 00 : 00"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0.5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="left"
                                            android:padding="8dp"
                                            android:text="Action Time"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="right">

                                        <TextView
                                            android:id="@+id/tv_action_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:background="@drawable/round_corners_textboxes_time"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="00 : 00 : 00"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0.5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="left"
                                            android:padding="8dp"
                                            android:text="Hold Time"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="right">

                                        <TextView
                                            android:id="@+id/tv_hold_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:background="@drawable/round_corners_textboxes_time"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="00 : 00 : 00"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_weight="0.5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="left"
                                            android:padding="8dp"
                                            android:text="Session No."
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="right">

                                        <TextView
                                            android:id="@+id/tv_session_no"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:background="@drawable/round_corners_textboxes_time"
                                            android:fontFamily="@font/ebrima"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="0"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="22sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@color/summary_green">

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@color/average_blue">

                                        </LinearLayout>
                                    </LinearLayout>

                                    <!--<LinearLayout-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="0.25"-->
                                    <!--android:gravity="center">-->

                                    <!--<LinearLayout-->
                                    <!--android:layout_width="15dp"-->
                                    <!--android:layout_height="15dp"-->
                                    <!--android:background="@color/not_good_orange">-->

                                    <!--</LinearLayout>-->
                                    <!--</LinearLayout>-->

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@color/red">

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:text="Good"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:text="Average"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <!--<LinearLayout-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_weight="0.25"-->
                                    <!--android:gravity="center">-->

                                    <!--<TextView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:fontFamily="@font/ebrima"-->
                                    <!--android:text="Not Good"-->
                                    <!--android:textColor="@color/pitch_black"-->
                                    <!--android:textSize="8sp" />-->
                                    <!--</LinearLayout>-->

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.25"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/ebrima"
                                            android:text="Bad"
                                            android:textColor="@color/pitch_black"
                                            android:textSize="18sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.65">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/ebrima"
                                        android:gravity="left"
                                        android:padding="8dp"
                                        android:text="@string/repetition"
                                        android:textColor="@color/pitch_black"
                                        android:textSize="25sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6dp"
                                    android:layout_weight="0.35"
                                    android:gravity="right">

                                    <TextView
                                        android:id="@+id/tv_num_of_reps"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:background="@drawable/round_corners_textboxes_time"
                                        android:fontFamily="@font/ebrima"
                                        android:gravity="center"
                                        android:padding="8dp"
                                        android:text="0"
                                        android:textColor="@color/pitch_black"
                                        android:textSize="25sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maximumEmgView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_corner_layout"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/tv_back_to_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rangeOfMotionData"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/ebrima"
                            android:text="@string/ss_emg"
                            android:textColor="@color/pitch_black"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/tv_muscle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ebrima"
                            android:textColor="@color/pitch_black"
                            android:textSize="23sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="0.4"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:padding="8dp"
                                android:text="Max "
                                android:textColor="@color/pitch_black"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_max_emg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebrima"
                                android:paddingLeft="5dp"
                                android:paddingTop="1dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="1dp"
                                android:text="165"
                                android:textColor="@color/pitch_black"
                                android:textSize="24sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp">

                        <ProgressBar
                            android:id="@+id/progress_max_emg"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:progress="1"
                            android:progressDrawable="@drawable/rounded_corners_progress_bar" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_back_to_home"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="Back To Home"
                    android:background="@drawable/round_same_buttons"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/maximumEmgView" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
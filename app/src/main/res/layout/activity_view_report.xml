<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.start.apps.pheezee.activities.SessionReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_session_report"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        app:elevation="5dp"
        android:visibility="invisible"
        android:elevation="5dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:id="@+id/iv_back_session_report"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:src="@drawable/back_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_report"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingStart="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/bg_btns_"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_session_report_overall_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:alpha="0.85"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/ll_day_w_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btns_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="5dp"
                        android:text="Today"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/tv_session_report_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_btn_color"
                        android:text="Today"
                        android:textStyle="bold"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:padding="2dp">
                    <Button
                        android:id="@+id/tv_session_report_overall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_btn_color"
                        android:text="History" />
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="5dp"
                        android:text="History"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="0.33"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_session_report_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/report_week"
                        android:textStyle="bold"
                        android:textColor="@color/pitch_black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:visibility="gone"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_session_report_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:alpha="0.5"
                        android:text="@string/report_month"
                        android:textColor="@color/pitch_black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_report_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_day_w_m">

            </FrameLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_session_duration"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:gravity="center">

        <TextView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Session Duration: "
            android:textSize="14sp"></TextView>
        <TextView
            android:id="@+id/tv_session_duration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/pitch_black"
            android:textSize="14sp"
            android:text=" -  "></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginEnd="10dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"

            android:layout_weight="1">

            <Button
                android:id="@+id/btn_today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_pat_btn_2"
                android:text="Today"

                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_weight="1">


        </LinearLayout>


    </LinearLayout>


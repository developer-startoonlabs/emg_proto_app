<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/popup_window"
    app:layout_constraintCircleRadius="0dp"
    android:isScrollContainer="true">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar_bodypart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:elevation="@dimen/toolbar_dim_5"
        app:elevation="@dimen/toolbar_dim_5"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_app_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:src="@drawable/green_back_arrow" />

            <TextView
                android:gravity="center|left"
                android:id="@+id/tv_create_account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pheezee_font"
                android:text="Patient Profile"

                style="@style/pheezee_normal"
                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                android:textSize="@dimen/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/edit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center"
                android:layout_marginRight="18dp"
                android:layout_gravity="center">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_edit" />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="@+id/my_toolbar_bodypart"
        app:layout_constraintBottom_toTopOf="@+id/bottom_button"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Kranthi_1"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_weight="0.70"
                        android:layout_height="fill_parent"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <LinearLayout android:orientation="vertical"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:paddingTop="8dp"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:gravity="left|center"
                                    android:id="@+id/patientName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="8dp"
                                    style="@style/pheezee_bold"
                                    android:text=""
                                    android:fontFamily="@font/pheezee_font"
                                    android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                    android:textSize="17dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:gravity="center|left"

                                    android:id="@+id/tv_patient_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/pheezee_font"
                                    android:text=""
                                    android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                    android:textSize="15dp"
                                    style="@style/pheezee_normal"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:layout_marginEnd="-15dp"
                        android:layout_width="wrap_content">

                        <LinearLayout
                            android:id="@+id/patient_image_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/my_toolbar_bodypart">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageView4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/view_profi_icon"
                                app:civ_border_color="#FF000000"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="19dp"
                                app:civ_border_width="0.1dp" />




                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_picture"
                                android:layout_width="50sp"
                                android:layout_height="65sp"
                                android:layout_gravity="center|top"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="19dp"
                                android:src="@drawable/test_patient_add_1"
                                android:visibility="gone"
                                app:civ_border_width="0.1dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:srcCompat="@drawable/test_patient_add_1" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bar_cal"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@+id/Kranthi_1"
                    android:background="@drawable/bg_back_semicircule"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    tools:ignore="MissingConstraints"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="3.8"
                            android:layout_height="fill_parent"
                            android:layout_width="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/pheezee_font"
                                android:textColor="@color/white"
                                style="@style/pheezee_bold"
                                android:textSize="22dp"
                                android:layout_marginTop="5dp"
                                android:text="Goal Reached"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent">
                            <RelativeLayout
                                android:layout_width="214dp"
                                android:layout_height="114dp">
                                <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                                    android:id="@+id/semi_prog"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="210dp"
                                    android:layout_height="100dp"
                                    app:progressBarColor="#FCB000"
                                    app:percent="0"
                                    app:progressBarWidth="55"
                                    app:progressPlaceHolderColor="#EFEFEF"
                                    app:progressPlaceHolderWidth="42"

                                    >


                                </me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="50dp"
                                    android:layout_marginTop="55dp"
                                    android:layout_marginEnd="50dp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_goal_num"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="30dp"
                                        android:fontFamily="@font/pheezee_font" />
                                </RelativeLayout>

                            </RelativeLayout>






                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/testing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toBottomOf="@+id/bar_cal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">

                            <TextView
                                android:id="@+id/tv_phno"
                                style="@style/pheezee_normal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pheezee_font"
                                android:gravity="center|left"
                                android:text="Phone no."
                                android:textColor="@color/light_grey_text_hint"
                                android:textSize="15dp"
                                tools:ignore="MissingConstraints,TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <ImageView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/call_icon"/>

                            <TextView
                                android:id="@+id/patientphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="15dp"
                                style="@style/pheezee_normal"
                                android:fontFamily="@font/pheezee_font"
                                android:textColor="@color/dark_grey_text_entry"
                                android:padding="6dp"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">

                            <TextView
                                android:id="@+id/tv_mail"
                                style="@style/pheezee_normal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pheezee_font"
                                android:gravity="center|left"
                                android:text="Mail ID"
                                android:textColor="@color/light_grey_text_hint"
                                android:textSize="15dp"
                                tools:ignore="MissingConstraints,TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">
                            <ImageView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/mail_icon"/>

                            <TextView
                                android:id="@+id/patientemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="15dp"
                                android:padding="6dp"
                                style="@style/pheezee_normal"
                                android:fontFamily="@font/pheezee_font"
                                android:textColor="@color/dark_grey_text_entry"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">

                            <TextView
                                android:id="@+id/tv_affected"
                                style="@style/pheezee_normal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pheezee_font"
                                android:gravity="center|left"
                                android:text="Affected side"
                                android:textColor="@color/light_grey_text_hint"
                                android:textSize="15dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <ImageView
                                android:id="@+id/effected_side"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/left_side_injured"/>

                            <TextView
                                android:gravity="center|left"
                                android:id="@+id/tv_affected_side"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="15dp"
                                android:fontFamily="@font/ebrima"
                                android:textColor="@color/pheezee_text_blue_for_icon_text_background"
                                android:padding="6dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">

                            <TextView
                                android:id="@+id/tv_condition"
                                style="@style/pheezee_normal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pheezee_font"
                                android:gravity="center|left"
                                android:text="Condition"
                                android:textColor="@color/light_grey_text_hint"
                                android:textSize="15dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">
                            <ImageView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/crt_icon"/>


                            <TextView
                                android:id="@+id/tv_condition_det"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/pheezee_font"
                                android:textColor="@color/dark_grey_text_entry"
                                android:textSize="15dp"
                                style="@style/pheezee_normal"
                                android:padding="6dp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:layout_width="0dp">

                            <TextView
                                android:id="@+id/tv_Speciality"
                                style="@style/pheezee_normal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pheezee_font"
                                android:gravity="center|left"
                                android:text="Speciality"
                                android:textColor="@color/light_grey_text_hint"
                                android:textSize="15dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:layout_width="0dp"
                            android:gravity="center|left">

                            <ImageView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/speclity_icon"/>


                            <TextView
                                android:id="@+id/tv_Speciality_det"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="15dp"
                                style="@style/pheezee_normal"
                                android:fontFamily="@font/pheezee_font"
                                android:textColor="@color/dark_grey_text_entry"
                                android:padding="6dp"
                                tools:ignore="MissingConstraints" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/testing"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/translucent_black"
                        app:layout_constraintTop_toBottomOf="@id/testing"
                        />



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_pdetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/white"
                        >


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/view_line_l"
                            android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            >

                            <LinearLayout
                                android:paddingLeft="16dp"
                                android:layout_weight="0.6"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="0dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/medical_icon"/>

                                <TextView
                                    android:id="@+id/tv_Medicalhistory"
                                    style="@style/pheezee_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/pheezee_font"
                                    android:gravity="center|left"
                                    android:padding="6dp"
                                    android:text="Medical History"
                                    android:textColor="@color/light_grey_text_hint"
                                    android:textSize="15dp"
                                    tools:ignore="MissingConstraints,TextSizeCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:layout_width="0dp">
                                <TextView
                                    android:gravity="center|left"
                                    android:id="@+id/tv_Medicalhistory_det"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textSize="15dp"
                                    style="@style/pheezee_normal"
                                    android:fontFamily="@font/pheezee_font"
                                    android:textColor="@color/dark_grey_text_entry"
                                    tools:ignore="MissingConstraints" />
                            </LinearLayout>

                        </LinearLayout>







                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/translucent_black"
                        app:layout_constraintTop_toBottomOf="@id/testing"
                        />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/kranthi_burra_0"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/testing"
                    tools:ignore="MissingConstraints">





                </LinearLayout>
                <LinearLayout
                    android:id="@+id/kranthi_burra"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tes"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_start_date"

                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingTop="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">

                                <TextView
                                    style="@style/pheezee_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pheezee_font"
                                    android:gravity="center"
                                    android:text="Start date"
                                    android:textColor="@color/light_grey_text_hint"
                                    android:textSize="15dp"
                                    tools:ignore="TextSizeCheck,TextSizeCheck" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingBottom="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:id="@+id/join"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/pheezee_font"
                                    android:textColor="@color/dark_grey_text_entry"
                                    android:textSize="15dp"
                                    style="@style/pheezee_normal"
                                    />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/bg_start_date">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingTop="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">

                                <TextView
                                    style="@style/pheezee_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pheezee_font"
                                    android:gravity="center"

                                    android:text="Last session"
                                    android:textColor="@color/light_grey_text_hint"
                                    android:textSize="15dp"
                                    tools:ignore="TextSizeCheck,TextSizeCheck" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingBottom="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:id="@+id/last_session"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/pheezee_font"
                                    android:textColor="@color/dark_grey_text_entry"
                                    android:textSize="15dp"
                                    style="@style/pheezee_normal"
                                    />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/bg_start_date"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingTop="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">

                                <TextView
                                    style="@style/pheezee_normal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"

                                    android:text="Sessions"
                                    android:textColor="@color/light_grey_text_hint"
                                    android:textSize="15dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingBottom="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:id="@+id/session_count_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    style="@style/pheezee_normal"
                                    android:fontFamily="@font/pheezee_font"
                                    android:textColor="@color/dark_grey_text_entry"
                                    android:textSize="15dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_start_date">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent">

                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingTop="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:fontFamily="@font/pheezee_font"
                                    android:text="Reports"
                                    style="@style/pheezee_normal"
                                    android:textColor="@color/light_grey_text_hint"
                                    android:textSize="@dimen/text_entry"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="start"
                                android:paddingStart="5dp"
                                android:paddingBottom="3dp"
                                android:layout_height="fill_parent"
                                android:layout_width="match_parent">
                                <TextView
                                    android:id="@+id/report_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pheezee_font"
                                    android:gravity="center"
                                    style="@style/pheezee_normal"
                                    android:textColor="@color/dark_grey_text_entry"
                                    android:textSize="@dimen/text_entry"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


    <LinearLayout

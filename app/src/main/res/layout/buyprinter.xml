<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/popup_window">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_print_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Thermal Printer found"
            android:textSize="20dp"
            android:fontFamily="@font/pheezee_font"/>
        <TextView
            android:id="@+id/buy_now_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Printer"
            android:textSize="20dp"
            android:fontFamily="@font/pheezee_font"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/bodypart_heading"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/other_printer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/pheezee_font"
            android:text="Print with other Printer"/>

    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
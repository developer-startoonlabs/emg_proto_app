<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="22dp" android:width="16dp">
        <shape>
            <solid android:color="#AAA" />
            <stroke android:width="1dp"
                android:color="#AAA"/>
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <layer-list>
            <item android:width="16dp" android:height="22dp" android:id="@+id/battery_cell_color">
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="bottom">
                    <shape>
                        <solid android:color="@color/red" />
                        <corners android:radius="0dp" />
                        <stroke android:width="1dp" android:color="#AAA"/>
                    </shape>
                </clip>
            </item>
            <item android:width="15dp" android:height="22dp">
                <clip
                    android:clipOrientation="vertical"
                    android:gravity="fill">
                    <layer-list>

                        <item android:bottom="10dp">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="#AAA" />
                            </shape>
                        </item>
                        <item android:top="1dp" android:gravity="top">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="#AAA" />
                            </shape>
                        </item>
                        <item android:bottom="-11dp" android:gravity="top">
                            <shape android:shape="line">
                                <stroke
                                    android:width="1dp"
                                    android:color="#AAA" />
                            </shape>
                        </item>

                    </layer-list>
                </clip>
            </item>
        </layer-list>
    </item>

</layer-list>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background" android:height="22dp" android:width="16dp" >
        <shape>
            <solid android:color="#AAA" />
            <stroke android:width="1dp"
            android:color="@color/red"/>
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:width="27dp" android:left="-5.5dp">
        <rotate
            android:fromDegrees="-125"
            android:toDegrees="-125"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line" >
                <stroke
                    android:width="1dp"
                    android:color="@color/red" />
            </shape>
        </rotate>
    </item>


</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0dip" android:color="@color/home_semi_red" />
            <gradient android:startColor="@color/home_semi_red" android:centerColor="@color/home_semi_red" android:endColor="@color/home_semi_red"> </gradient>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0dip" android:color="@color/home_semi_red" />
            <solid android:color="@color/home_semi_red">

            </solid>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <gradient android:startColor="@color/home_semi_red" android:centerColor="@color/home_semi_red" android:endColor="@color/home_semi_red"> </gradient>
        </shape>
    </item>
</selector>
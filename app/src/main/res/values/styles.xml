<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorPrimaryDark">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorAccent">@color/pheezee_text_blue_for_icon_text_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorPrimaryDark">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorAccent">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="android:fontFamily">@font/ebrima</item>
    </style>

    <style name="AppTheme.NoActionBar.home" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorPrimaryDark">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorAccent">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorSecondary">@color/pitch_black</item>
        <item name="android:fontFamily">@font/ebrima</item>
    </style>

    <style name="PrimaryColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBarLogin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorPrimaryDark">@color/pheezee_text_blue_for_icon_text_background</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.customDesign.noActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:buttonStyle">@drawable/custom_button_color</item>
    </style>

    <style name="AppTheme.custom.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:buttonStyle">@drawable/custom_button_color</item>
    </style>


    <style name="NavigationView" >
        <item name="fontFamily">@font/ebrima</item>
